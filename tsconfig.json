{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "esnext.asynciterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["resources/js/**/*.ts"],
  "exclude": ["node_modules"]
}
